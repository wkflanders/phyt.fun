{
    "name": "phyt.fun",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "turbo dev",
        "prebuild": "turbo run clean --concurrency=1 && pnpm install",
        "build": "pnpm run prebuild && turbo run build",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "type-check": "turbo type-check",
        "update": "turbo run update",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "clean": "rm -rf node_modules && turbo clean",
        "ci": "pnpm run prebuild && pnpm run build && pnpm run type-check && pnpm run lint",
        "db:up": "docker compose up -d",
        "db:down": "docker compose down",
        "db:start": "docker compose start",
        "db:stop": "docker compose stop",
        "db:clean": "docker compose down -v",
        "db:generate": "pnpm --filter @phyt/drizzle run db:generate",
        "db:push": "pnpm --filter @phyt/drizzle run db:push",
        "db:migrate": "pnpm --filter @phyt/drizzle run db:migrate",
        "db:studio": "pnpm --filter @phyt/drizzle run db:studio",
        "db:seed": "pnpm --filter @phyt/drizzle run db:seed",
        "db:reset": "pnpm --filter @phyt/drizzle run db:reset",
        "prepare": "husky"
    },
    "devDependencies": {
        "@types/node": "^22.14.0",
        "eslint": "^9.24.0",
        "husky": "^9.1.7",
        "prettier": "^3.5.3",
        "tsup": "^8.4.0",
        "turbo": "^2.5.3",
        "typescript": "5.7.3"
    },
    "dependencies": {
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.7",
        "uuidv7": "^1.0.2"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=18.0.0"
    }
}
