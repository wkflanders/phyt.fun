//  apps/web/tsconfig.json
{
    "extends": "@phyt/tsconfig/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "next.config.js"
    ],
    "exclude": ["node_modules"]
}
