//  apps/web/tsconfig.json
{
    "extends": "@phyt/tsconfig/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@phyt/*": ["../../packages/*/src"]
        },
        "allowJs": true,
        "resolveJsonModule": true,
        "jsx": "preserve"
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
