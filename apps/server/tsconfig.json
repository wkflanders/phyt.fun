{
    "extends": "@phyt/tsconfig/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "noErrorTruncation": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
