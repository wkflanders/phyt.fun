//  apps/server/tsconfig.json
{
    "extends": "@phyt/tsconfig/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "noErrorTruncation": true,
        "paths": {
            "@/*": ["./src/*"],
            "@phyt/*": ["../../packages/*/src"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
