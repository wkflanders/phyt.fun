// root tsconfig.json
{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "noEmit": true
    },
    "exclude": ["node_modules"]
}
