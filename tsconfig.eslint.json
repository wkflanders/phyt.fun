// root tsconfig.eslint.json
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node16",
        "module": "NodeNext",
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@phyt/*": ["packages/*/src"],
            "@/*": ["apps/server/src/*", "apps/web/src/*"]
        }
    },
    "include": ["apps/*/src", "packages/*/src"]
}
