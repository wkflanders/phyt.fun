//  packages/contracts/tsconfig.json
{
    "extends": "@phyt/tsconfig/base.json",
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "paths": {
            "@phyt/contracts": ["./src/index.ts"],
            "@phyt/contracts/abi/*": ["./src/abi/*"]
        }
    },
    "include": ["src/**/*", "abi/**/*"],
    "exclude": ["node_modules"]
}
