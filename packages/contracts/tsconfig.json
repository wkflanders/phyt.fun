{
    "extends": "@phyt/tsconfig/base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "target": "ES2022",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/abi/*.json"],
    "exclude": ["node_modules", "dist"]
}
