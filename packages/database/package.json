{
    "name": "@phyt/database",
    "version": "0.0.0",
    "private": true,
    "main": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist .turbo node_modules",
        "lint": "eslint .",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit push",
        "db:reset": "ts-node src/reset.ts",
        "db:studio": "drizzle-kit studio",
        "db:seed": "tsc src/seed.ts",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "drizzle-orm": "^0.39.3",
        "drizzle-seed": "^0.3.1",
        "pg": "^8.14.1",
        "ws": "^8.18.1"
    },
    "devDependencies": {
        "@phyt/eslint-config": "workspace:*",
        "@phyt/typescript-config": "workspace:*",
        "@types/pg": "^8.11.11",
        "@types/ws": "^8.18.0",
        "drizzle-kit": "^0.30.6",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^9.1.0",
        "ts-node": "^10.9.2"
    }
}
