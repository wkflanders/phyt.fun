{
    "extends": "@phyt/tsconfig/library.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": ".",
        "emitDeclarationOnly": true,
        "moduleResolution": "nodenext",
        "module": "nodenext",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "drizzle.config.ts"],
    "exclude": ["node_modules", "dist", "migrations"]
}
