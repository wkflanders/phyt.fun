{
    "extends": "@phyt/tsconfig/library.json",
    "compilerOptions": {
        "module": "esnext",
        "target": "es2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types", "src/eslint_types"],
        "baseUrl": ".",
        "strict": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/eslint_types/**/*.d.ts"],
    "exclude": ["dist", "node_modules"]
}
