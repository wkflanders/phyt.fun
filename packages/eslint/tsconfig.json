// packages/eslint/tsconfig.json
{
    "extends": "@phyt/tsconfig/library.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "es2020",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": ".",
        "strict": true
    },
    "include": ["src/**/*", "types/**/*.d.ts"],
    "exclude": ["dist", "node_modules"]
}
