{
    "$schema": "https://turbo.build/schema.v2.json",
    "tasks": {
        "prebuild": {
            "outputs": [],
            "cache": false
        },
        "build": {
            "dependsOn": ["prebuild", "^build"],
            "outputs": [".next/**", "dist/**", "build/**", "src/**/*.json"],
            "env": [
                "NEXT_PUBLIC_*",
                "PRIVY_APP_ID",
                "PRIVY_SECRET_KEY",
                "PRIVY_VERIFICATION_KEY",
                "API_URL",
                "DATABASE_URL",
                "BASE_RPC_URL",
                "EXCHANGE_ADDRESS",
                "PHYT_CARDS_ADDRESS",
                "EXECUTOR_ADDRESS",
                "MINTER_ADDRESS",
                "SERVER_ADDRESS",
                "SERVER_PRIVATE_KEY",
                "SERVER_PORT",
                "POSTGRES_HOST",
                "POSTGRES_PORT",
                "POSTGRES_USER",
                "POSTGRES_PASSWORD",
                "POSTGRES_DB",
                "FRONTEND_URL",
                "AWS_REGION",
                "AWS_ACCESS_KEY",
                "AWS_SECRET_ACCESS_KEY",
                "AWS_IMAGES_BUCKET",
                "AWS_CLOUDFRONT_IMAGES_URL",
                "AWS_METADATA_BUCKET",
                "AWS_CLOUDFRONT_METADATA_URL",
                "AWS_AVATAR_URL_BUCKET",
                "AWS_CLOUDFRONT_AVATAR_URL",
                "AWS_CLOUDFRONT_AVATAR_URL_KEY_ID",
                "AWS_CLOUDFRONT_AVATAR_URL_PRIVATE_KEY",
                "NODE_ENV"
            ]
        },
        "@phyt/eslint#build": {
            "outputs": ["dist/**"],
            "cache": false
        },
        "@phyt/database#build": {
            "outputs": []
        },
        "@phyt/types#build": {
            "outputs": [],
            "cache": false
        },
        "@phyt/server#build": {
            "dependsOn": [
                "@phyt/database#build",
                "@phyt/types#build",
                "@phyt/contracts#build"
            ]
        },
        "@phyt/web#build": {
            "dependsOn": [
                "@phyt/database#build",
                "@phyt/server#build",
                "@phyt/types#build"
            ]
        },
        "type-check": {
            "dependsOn": ["^type-check"]
        },
        "lint": {
            "dependsOn": ["type-check", "^lint"]
        },
        "lint:fix": {
            "dependsOn": ["type-check", "^lint:fix"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
