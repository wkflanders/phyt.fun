{
    "$schema": "https://turbo.build/schema.v2.json",
    "globalEnv": [".env"],
    "tasks": {
        "prebuild": {
            "outputs": [],
            "cache": false
        },
        "build": {
            "dependsOn": ["prebuild", "^build"],
            "outputs": [".next/**", "dist/**", "build/**", "src/**/*.json"],
            "env": [
                "NEXT_PUBLIC_PRIVY_APP_ID",
                "PRIVY_SECRET_KEY",
                "PRIVY_VERIFICATION_KEY",
                "DATABASE_URL",
                "NEXT_PUBLIC_*",
                "BASE_RPC_URL",
                "EXCHANGE_ADDRESS",
                "PHYT_CARDS_ADDRESS",
                "EXECUTOR_ADDRESS",
                "MINTER_ADDRESS",
                "SERVER_PORT",
                "POSTGRES_HOST",
                "POSTGRES_PORT",
                "POSTGRES_USER",
                "POSTGRES_PASSWORD",
                "POSTGRES_DB",
                "FRONTEND_URL",
                "AWS_ACCESS_KEY",
                "AWS_SECRET_ACCESS_KEY",
                "AWS_REGION",
                "AWS_METADATA_BUCKET",
                "AWS_AVATAR_URL_BUCKET",
                "AWS_CLOUDFRONT_AVATAR_URL",
                "SERVER_PRIVATE_KEY",
                "NODE_ENV"
            ]
        },
        "@phyt/eslint#build": {
            "outputs": ["dist/**"]
        },
        "@phyt/database#build": {
            "outputs": []
        },
        "@phyt/types#build": {
            "outputs": []
        },
        "@phyt/web#build": {
            "dependsOn": ["@phyt/database#build", "@phyt/server#build"]
        },
        "type-check": {
            "dependsOn": ["build", "^type-check"],
            "outputs": []
        },
        "lint": {
            "dependsOn": ["type-check", "^lint"],
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
