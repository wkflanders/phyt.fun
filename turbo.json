{
    "$schema": "https://turbo.build/schema.v2.json",

    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "dist/**", "build/**", "src/**/*.json"],
            "env": [
                "NEXT_PUBLIC_*",
                "PRIVY_APP_ID",
                "PRIVY_SECRET_KEY",
                "PRIVY_VERIFICATION_KEY",
                "API_URL",
                "DATABASE_URL",
                "BASE_RPC_URL",
                "EXCHANGE_ADDRESS",
                "PHYT_CARDS_ADDRESS",
                "EXECUTOR_ADDRESS",
                "MINTER_ADDRESS",
                "SERVER_ADDRESS",
                "SERVER_PRIVATE_KEY",
                "SERVER_PORT",
                "ADMIN_IDS",
                "POSTGRES_HOST",
                "POSTGRES_PORT",
                "POSTGRES_USER",
                "POSTGRES_PASSWORD",
                "POSTGRES_DB",
                "POSTGRES_URL",
                "FRONTEND_URL",
                "AWS_REGION",
                "AWS_ACCESS_KEY",
                "AWS_SECRET_ACCESS_KEY",
                "AWS_IMAGES_BUCKET",
                "AWS_CLOUDFRONT_IMAGES_URL",
                "AWS_METADATA_BUCKET",
                "AWS_CLOUDFRONT_METADATA_URL",
                "AWS_AVATAR_URL_BUCKET",
                "AWS_CLOUDFRONT_AVATAR_URL",
                "AWS_CLOUDFRONT_AVATAR_URL_KEY_ID",
                "AWS_CLOUDFRONT_AVATAR_URL_PRIVATE_KEY",
                "NODE_ENV"
            ]
        },

        "test": {
            "outputs": ["coverage/**"],
            "persistent": false,
            "cache": true
        },

        "lint": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"],
            "outputs": []
        },
        "type-check": {
            "dependsOn": ["^type-check"],
            "outputs": []
        },

        "dev": {
            "cache": false,
            "persistent": true
        },
        "update": {
            "dependsOn": ["^update"]
        },
        "clean": {
            "cache": false
        }
    }
}
